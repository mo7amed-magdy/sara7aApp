<%- include('./shared/header.ejs') %>

    <!-- /navbar -->

    <div class="container text-center my-5">
        <div class="user my-3">
            <i class="fas fa-user-secret user-icon"></i>
            <h4 class="login">Login</h4>
        </div>
        <% if (error) { %>
            <div class="alert alert-danger"><%= error %> </div>

        <% } %>
        <% if (flash) { %>
            <% for( let index = 0; index < flash.length; index++ ) { %>
               <div class="alert alert-danger"><%= flash[index].message %> </div>
            <% } %>
           <% } %>
        <div class="card p-5 w-75 m-auto">
            <form method="POST" action="/handleLogin">
                <input class="form-control w-100" placeholder="Enter your email" type="text" name="email">
                <input class="form-control my-4 w-100" placeholder="Enter your Password" type="password" name="password">
                <button class="btn btn-default-outline my-4 w-100 rounded">Login</button>
                <p><a class="text-muted forgot btn w-100" href="">I Forgot My Password</a></p>
                <a class="btn btn-default-outline w-100" href="/register">Register</a>
            </form>
        </div>
    </div>

    <%- include('./shared/footer.ejs') %>


